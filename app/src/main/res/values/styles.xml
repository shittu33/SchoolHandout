<resources>


    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item><!--
        <item name="dialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="android:alertDialogStyle">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="android:popupMenuStyle">@style/Theme.AppCompat.Light.Dialog.Alert</item>-->
        <item name="actionModeStyle">@style/ActionModeBar</item>
        <!--<item name="actionModeCloseDrawable">@drawable/ic_cancel_black_24dp</item>-->
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="SampleTheme" parent="AppTheme">
        <item name="colorPrimary">@color/accentColor</item>
        <item name="colorPrimaryDark">@color/deep_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <!--
        <item name="dialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="android:alertDialogStyle">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="android:popupMenuStyle">@style/Theme.AppCompat.Light.Dialog.Alert</item>-->
    </style>
    <style name="MyRaidoButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColorPrimaryDisableOnly">#00838f</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="AppThemeOverlay" parent="Theme.AppCompat">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="DrawerLayout" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActionBar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="ActionModeBar" parent="Base.Widget.AppCompat.ActionMode">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="background">@drawable/action_bar_draw</item>
        <item name="android:actionBarSize">?attr/actionBarSize</item>
        <item name="android:height">?attr/actionBarSize</item>
        <item name="android:actionBarItemBackground">@color/white</item>
    </style>
</resources>
